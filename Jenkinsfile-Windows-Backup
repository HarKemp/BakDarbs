pipeline {
    agent { label 'windows-agent-1' } // Use your Windows agent label
    options {
        // Clean workspace before checkout
        skipDefaultCheckout(true) 
    }
    triggers {
        cron('0 3,15 * * *') // 3 AM and 3 PM daily
    }
    stages {
         stage('Checkout Scripts') {
             steps {
                 // Explicit checkout step
                 checkout scmGit(branches: [name: '*/main'], extensions: [cleanBeforeCheckout()], userRemoteConfigs: [[credentialsId: '89682f6d-56e2-4bdb-b7ff-f30f11a9aead', url: 'https://github.com/HarKemp/BakDarbs.git']]) // Use your credentialsId and repo URL
                 // Alternative simpler checkout:
                 // git url: 'https://github.com/HarKemp/BakDarbs.git', branch: 'main', credentialsId: '89682f6d-56e2-4bdb-b7ff-f30f11a9aead'
             }
         }
        stage('Run Windows Backup') {
            steps {
                echo "Executing backup.ps1"
                powershell '.\\autoscripts\\windows\\backup.ps1' 
            }
        }
    }
    post {
        success { echo 'Windows Backup Successful' }
        failure { echo 'Windows Backup Failed!' }
    }
}
